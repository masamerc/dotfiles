{
    "description": "Tap Caps Lock for ESC or Hold for Control & Tap tab for tab or hold for alt",
    "manipulators": [
        {
            "from": {
                "key_code": "caps_lock",
                "modifiers": {
                    "optional": [
                        "any"
                    ]
                }
            },
            "to": [
                {
                    "key_code": "left_control",
                    "lazy": true
                }
            ],
            "to_if_alone": [
                {
                    "key_code": "escape"
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "tab",
                "modifiers": {
                    "optional": [
                        "any"
                    ]
                }
            },
            "to": [
                {
                    "key_code": "left_alt",
                    "lazy": true
                }
            ],
            "to_if_alone": [
                {
                    "key_code": "tab"
                }
            ],
            "type": "basic"
        }
    ]
}
